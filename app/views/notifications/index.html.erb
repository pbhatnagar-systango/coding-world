<h1>Submit Notification</h1>
<%= form_for :notification , url: notifications_path do |f| %>
 
  <p>
    <%= f.label :Title  %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :Text  %><br>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.label :Domain  %><br>
    <%= f.select :domain, ['C','C++','JAVA']%>

  </p>
  </p>
  <%= f.hidden_field :status, :value => "pending" %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <p>
  <p>
    <%= f.submit %>
  </p>
<% end %>